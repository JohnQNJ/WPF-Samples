<Page x:Class="WPFGallery.Views.NavigationWindowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFGallery.Views"
      xmlns:controls="clr-namespace:WPFGallery.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NavigationWindowPage"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid>
        <Grid x:Name="ContentPagePane" Height="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:PageHeader Margin="0,0,0,32" Title="{Binding ViewModel.PageTitle}" ShowDescription="False" />
            <ScrollViewer Grid.Row="1" Margin="0,0,0,24" Padding="0,0,24,0">
                <StackPanel Margin="0,0,0,24">
                    <controls:ControlExample
                        Margin="10"
                        HeaderText="Navigation Window"
                        XamlCode="&lt;NavigationWindow Source=&quot;FramePage1.xaml&quot; Width=&quot;600&quot; Height=&quot;450&quot;/&gt;">
                        <StackPanel Orientation="Vertical">
                            <TextBlock TextWrapping="Wrap" Style="{StaticResource BodyTextBlockStyle}" Margin="0 0 0 12">
                                <Run Text="NavigationWindow is very similar to Frame in respect to functionality and appearance. Both of them have the same navigation capabilities." />
                                <LineBreak />
                                <Run Text="However, NavigationWindow unlike Frame, is a subclass of Window and can act as a top-level window for WPF applications." />
                            </TextBlock>
                            <Button 
                                x:Name="OpenNavigationWindow"
                                VerticalAlignment="Center"
                                Content="Open a NavigationWindow"
                                Click="OpenNavigationWindow_Click" />
                        </StackPanel>
                    </controls:ControlExample>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
